@model ASP.Models.SignUpModel
@{
    ViewBag.Title = "SignUp";
}
<div class="content">
    <h1>Sign Up</h1>

    @using (Html.BeginForm("SignUp", "MemberSide", FormMethod.Post))
    {
    <p>
        <label>Name</label>
    </p>
        @Html.EditorFor(model => model.Name)
    <p>
        <label>Username</label>
    </p>
        @Html.EditorFor(model => model.Username)
    <p>
        <label>Password</label>
    </p>
        @Html.PasswordFor(model => model.Password)
        <p>
            <input type="submit" value="Sign Up" />
        </p>

        @Html.DisplayFor(model => model.signerror)
    }

    <p>
        @Html.ActionLink("Or click here to Log In", "LogIn", "MemberSide")
    </p>

</div>